<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goshbjosh.spamurai">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        // MAIN ACTIVITY
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        // RINGER OPTIONS
        <activity
            android:name=".RingerOptions"
            android:label="Ringer Options"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        // DETECT INCOMING CALL
        <receiver android:name=".PhoneStateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        // CALL REVIEW ACTIVITY
        <activity
            android:name=".CallReview"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        // MARK AS SPAM ACTIVITY
        <activity
            android:name=".MarkAsSpam"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".LevelUp"
            android:label="@string/title_activity_level_up"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>